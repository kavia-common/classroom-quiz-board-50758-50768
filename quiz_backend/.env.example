# Backend environment example for Quiz Backend

# Django
DJANGO_DEBUG=true
DJANGO_SECRET_KEY=replace-with-a-secure-key

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=.kavia.ai,localhost,127.0.0.1,testserver

# CORS
# Set to "true" to allow all origins or "false" to use CORS_ALLOWED_ORIGINS
CORS_ALLOW_ALL=true
# Frontend origin (used if CORS_ALLOW_ALL is false)
FRONTEND_URL=http://localhost:3000

# API Base URL (useful for docs/clients)
# This should reflect the gateway/host/port where the backend is reachable by the frontend
API_BASE_URL=http://localhost:3001

# Postgres (database container listens on port 5001)
POSTGRES_DB=quizdb
POSTGRES_USER=quizuser
POSTGRES_PASSWORD=quizpass
POSTGRES_HOST=quiz_database
POSTGRES_PORT=5001
DB_CONN_MAX_AGE=60
